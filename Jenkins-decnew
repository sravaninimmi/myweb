pipeline{
    agent any
    
    environment{
        PATH = "/usr/bin/mvn /opt/apache-maven-3.5.2/bin/mvn.cmd /opt/apache-maven-3.5.2/bin/:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'ccb2e0c5-7fd5-4c2e-88e6-d71c35b9185b', url: 'https://github.com/Sudeepreddygaddam/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy"){
            steps{
                sshagent(['07ace370-9ee9-4d4b-b6a1-90e619ab3705']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@18.218.248.131:/home/ec2-user/apache-tomcat-9.0.86/webapps
                    
                    ssh ec2-user@18.218.248.131 /home/ec2-user/apache-tomcat-9.0.86/bin/shutdown.sh
                    
                    ssh ec2-user@18.218.248.131 /home/ec2-user/apache-tomcat-9.0.86/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
